{ 
    "compilerOptions": {
        "types": ["node", "dotenv"],
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*":["node_modules/*"],
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}